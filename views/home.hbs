<!DOCTYPE html>
<html>
  <head>
    <html lang="en" xmlns="http://www.w3.org/1999/html">
    <head>
        <title>{{params.content.title}}</title>
        {{>head}}
    </head>
  </head>
  <body>
    {{>navbar}}

    <!-- splash -->
    <div class="block" style="background: #000 url('/img/artwork/{{params.content.images.splash}}') no-repeat center center scroll; -webkit-background-size: cover; -moz-background-size: cover; background-size: cover;"></div>

    <!-- digenes -->
    <div style="height: 100%; width: 100%; position: relative;">
      <div class="container-fluid" style="height: 100%">
        <div class="row no-gutters" style="height: 100%">
          <div class="col-lg-6">
            <div style="height: 100%; width: 100%; background: #000 url('/img/artwork/digenes.jpg') no-repeat center center scroll; -webkit-background-size: cover; -moz-background-size: cover; background-size: cover;"></div>
          </div>
          <div class="col-lg-6">
            <div style="height: 100%; width: 100%; background: #000 url('/img/artwork/bardas.jpg') no-repeat center center scroll; -webkit-background-size: cover; -moz-background-size: cover; background-size: cover;"></div>
          </div>
        </div>
      </div>
      <div class="quote">
        <h1 class="quote">{{{params.content.text.quote}}}</h1>
      </div>
    </div>

    <!-- synopsis -->
    <div id="synopsis" class="block">
      <div class="container-fluid">
        <div class="row">
          <div class="col-lg-12">
            <div class="title">
              <h1 class="title">Synopsis</h1>
            </div>
          </div>
        </div>
        <div class="block" style="background: #000 url('/img/artwork/memories.jpg') no-repeat center center scroll; -webkit-background-size: cover; -moz-background-size: cover; background-size: cover;">
        <div class="row">
          <div class="col-lg-3"></div>
          <div class="col-lg-6 justify-content-center">
              <div class="card" style="background-color: rgba(0,0,0,0.8)">
                <div class="title">
                  <h3>{{{params.content.text.synopsis.premise}}}</h3>
                </div>
                <div class="card-text">
                  <h5>{{{params.content.text.synopsis.punchline}}}</h5>
                  {{{params.content.text.synopsis.detail}}}
                </div>
              </div>
            </div>
            <div class="col-lg-3"></div>
          </div>
        </div>
      </div>
    </div>

    <!-- team -->
    <div id="team" class="block team">
      <div class="container-fluid">
        <div class="row">
          <div class="col-lg-12">
            <div class="title">
              <h1 class="title">Team</h1>
            </div>
          </div>
        </div>
        <div class="row">
          {{#each params.content.text.team}}
          <div class="col-lg-3">
            <div class="card">
              <a data-toggle="collapse" href="#{{@key}}" role="button" aria-expanded="false" aria-controls="{{@key}}"><img class="card-img-top" src="{{this.img}}" alt="Card image cap"></a>
              <div class="card-body">
                <h4 class="card-title"><a data-toggle="collapse" href="#{{@key}}" role="button" aria-expanded="false" aria-controls="{{@key}}">{{this.name}}</a></h4>
                <div class="collapse multi-collapse" id="{{@key}}">
                  <p class="card-text">{{this.bio}}</p>
                  <a data-toggle="collapse" href="#{{@key}}" role="button" aria-expanded="false" aria-controls="{{@key}}"><i class="fas fa-chevron-up"></i></a>
                </div>
              </div>
            </div>
          </div>
          {{/each}}
        </div>
      </div>
    </div>

    <div class="copyright">
      <p>Â© 2018 Aethon Holdings Private Limited. <br />All rights reserved.</p>
    </div>

    {{>footer}}
  </body>
</html>
